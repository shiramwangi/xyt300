generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Add your models here
model User {
  id         String      @id @default(cuid())
  email      String      @unique
  name       String?
  skills     Skill[]
  projects   Project[]
  suggestions Suggestion[]
  createdAt  DateTime    @default(now())
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  level     Int      // 1-10
  category  String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  techStack   String[]
  githubUrl   String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Suggestion {
  id        String   @id @default(cuid())
  content   String
  type      String   // "skill" | "project"
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
} 